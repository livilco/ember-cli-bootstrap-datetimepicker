{{#unless inline}}
  <input
    type="text"
    class="form-control {{if (or isMobile readonly) "bs-disable"}}"
    placeholder={{placeholder}}
    readonly={{or isMobile readonly}}
    onfocus={{action "focus"}}
  >
  {{#if showIcon}}
    <span class="input-group-addon">
      <i class={{iconClasses}}></i>
    </span>
  {{/if}}
{{/unless}}
